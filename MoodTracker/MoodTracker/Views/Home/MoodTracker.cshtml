@model MoodTrackerViewModel
@{
    ViewBag.Title = "Dash Board";
}

<div class="container py-4">
    <h2 class="fw-bold mb-2">Mood Tracker</h2>
    <p class="text-muted mb-4">Visualize your emotional journey and track your progress</p>

    <!-- Top Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm p-4 h-100 d-flex align-items-center justify-content-between flex-row">
                <div>
                    <h5 class="fw-bold mb-1">Entries This Week</h5>
                    <p class="fs-2 fw-bold mb-0">@Model.EntriesThisWeek</p>
                </div>
                <div class="icon-circle purple-bg">
                    <i class="fa-solid fa-pen-to-square text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 h-100 d-flex align-items-center justify-content-between flex-row">
                <div>
                    <h5 class="fw-bold mb-1">Consistency</h5>
                    <p class="fs-2 fw-bold mb-0">@Model.ConsistencyIn7Days <span class="text-muted fs-6">of 7 days</span></p>
                </div>
                <div class="icon-circle green-bg">
                    <i class="fa-solid fa-calendar-check text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 h-100 d-flex align-items-center justify-content-between flex-row">
                <div>
                    <h5 class="fw-bold mb-1">Dominant Mood</h5>
                    <p class="fs-2 fw-bold mb-0">@Model.DominantMood</p>
                </div>
                <div class="icon-circle yellow-bg">
                    <i class="fa-solid fa-chart-line text-white"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Mood Scale Legend -->
    <div class="card shadow-sm p-4 mb-5">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Mood Scale</h5>
            <div class="d-flex flex-wrap gap-4">
                <div class="mood-legend-item d-flex align-items-center">
                    <span class="legend-dot happy-dot me-2"></span> Happy
                </div>
                <div class="mood-legend-item d-flex align-items-center">
                    <span class="legend-dot sad-dot me-2"></span> Sad
                </div>
                <div class="mood-legend-item d-flex align-items-center">
                    <span class="legend-dot depressed-dot me-2"></span> Depressed
                </div>
                <div class="mood-legend-item d-flex align-items-center">
                    <span class="legend-dot angry-dot me-2"></span> Angry
                </div>
                <div class="mood-legend-item d-flex align-items-center">
                    <span class="legend-dot frustrated-dot me-2"></span> Frustrated
                </div>
                <div class="mood-legend-item d-flex align-items-center">
                    <span class="legend-dot emotional-dot me-2"></span> Emotional
                </div>
            </div>
        </div>
    </div>
    
    
    <div class="mb-5">
        <h3 class="fw-bold mb-4 text-center">All History</h3>
        <div class="card shadow-sm p-4 mx-auto">
            <div class="card-body">
                @foreach (MoodEntry moodEntry in @Model.AllMoodEntries)
                {
                    <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                        <div class="me-3 text-muted small text-nowrap flex-shrink-0">
                            <i class="fa-regular fa-calendar-days me-1"></i> @moodEntry.Created.ToString("MM/dd/yyyy")<br>
                            <i class="fa-regular fa-clock me-1"></i> @moodEntry.Created.ToString("HH:mm")
                        </div>
                        <div class="mood-legend-item">
                            @switch (@moodEntry.Tag)
                            {
                                case MoodTagOptions.Happy: 
                                    <span class="legend-dot happy-dot me-2"></span>
                                    break; 
                                case MoodTagOptions.Sad:
                                    <span class="legend-dot sad-dot me-2"></span>
                                    break;
                                case MoodTagOptions.Depressed:
                                    <span class="legend-dot depressed-dot me-2"></span>
                                    break;
                                case MoodTagOptions.Angry:
                                    <span class="legend-dot angry-dot me-2"></span>
                                    break;
                                case MoodTagOptions.Frustrated:
                                    <span class="legend-dot frustrated-dot me-2"></span>
                                    break;
                                case MoodTagOptions.Emotional:
                                    <span class="legend-dot emotional-dot me-2"></span>
                                    break;
                            }
                            <span class="text-muted">@moodEntry.Tag</span>
                            <p class="mb-0">@moodEntry.Description</p>
                        </div>
                    </div>
                }
                <p class="text-muted text-center mt-3">No more Entries!</p>
            </div>
        </div>
    </div>
</div>